<div class="card mb-3">
  <div class="row">
    <div class="col-auto">
      <img class="img-responsive center-block" src="{{avatar}}" style="width: 300px;">
    </div>
    <div class="col-auto p-4">
      <h3>{{name}}</h3>
      <p>{{account}}</p>
      <p>{{email}}</p>
      <ul class="list-unstyled">
        <li><strong>{{followingCount}}</strong> followings (跟隨中)</li>
        <li><strong>{{followerCount}}</strong> followers (跟隨者)</li>
      </ul>
      {{#if isFollowed }}
      <form action="/following/{{profile.id}}?_method=DELETE" method="POST" style="display: contents;"><button type="submit" class="btn btn-danger">取消追蹤</button></form>
      {{else}}
      <form action="/following/{{profile.id}}" method="POST" style="display: contents;"><button type="submit" class="btn btn-primary">追蹤</button></form>
      {{/if}}
    </div>
  </div>
</div>
